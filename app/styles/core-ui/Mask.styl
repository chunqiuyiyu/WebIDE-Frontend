.mask-container {
  position: absolute;
  width: 100%;
  height: 100%;
  flex-direction: column;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;

  .mask-video {
    max-width: 800px;
    background: #fff;
    margin-bottom: 15px;
    border-radius: 2px;
  }
  .progress {
